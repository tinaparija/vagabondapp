
<div class="floatleft">

<ul>
  <li>First Name: <%= @user.first_name.capitalize %></li>
  <li>Last Name: <%= @user.last_name.capitalize %></li>
  <li>Current City: <%= @user.home_city.capitalize %></li>
  <li>Date Joined: <%= @user.created_at.strftime("%d %b. %Y") %></li>
  <li id ="edit_user"><%= link_to "edit this user", edit_user_path(@user) %></li>
</ul>
  
</div>

<div class="floatright">
  	<h2 >Posts</h2>
  	
	<% @user.posts.each do |post| %>
	<p>Post Title: <%= link_to post.title.capitalize, show_post_path(post) %></p> 
	 <% end %>
  	
  </div>



